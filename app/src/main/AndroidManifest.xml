<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevmc.caloriecounter">
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterCredentials" />
        <activity android:name=".RegisterPersonalDetails" />
        <activity
            android:name=".HomePage"
            android:noHistory="true" />
        <activity android:name=".CalorieCounter" />
        <activity android:name=".FoodMain" />
        <activity android:name=".ActivitiesMain" />
        <activity
            android:name=".ResourcesMain"
            android:parentActivityName=".HomePage" />
        <activity
            android:name=".UserAccount"
            android:parentActivityName=".HomePage" />
        <activity android:name=".EditUserDetails" />
        <activity
            android:name=".AddFood"
            android:parentActivityName=".HomePage" />
        <activity
            android:name=".AddActivity"
            android:parentActivityName=".HomePage" />
        <activity
            android:name=".DayBreakdown"
            android:parentActivityName=".HomePage" />
        <activity android:name=".BlankActivity"></activity>
    </application>

</manifest>