<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevmc.caloriecounter.RegisterPersonalDetails">

    <TextView
        android:id="@+id/register_personal_details_welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/register_welcome_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_personal_details_welcome_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp"
        android:text="Register Your Personal Details" />

    <TextView
        android:id="@+id/user_register_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_welcome_msg_tv"
        android:layout_marginTop="34sp"
        android:layout_marginLeft="60sp"
        android:text="Name"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_register_name_et"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_register_age_tv"
        android:layout_alignEnd="@+id/register_welcome_msg_tv"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_register_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_name_tv"
        android:layout_alignRight="@+id/user_register_name_tv"
        android:layout_marginTop="20sp"
        android:text="Age"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_register_age_et"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_age_tv"
        android:layout_alignLeft="@+id/user_register_name_et"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_register_height_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_age_tv"
        android:layout_alignRight="@+id/user_register_name_tv"
        android:layout_marginTop="20sp"
        android:text="Height"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_register_height_et"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_height_tv"
        android:layout_alignLeft="@+id/user_register_name_et"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_register_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_height_tv"
        android:layout_alignRight="@+id/user_register_name_tv"
        android:layout_marginTop="20sp"
        android:text="Weight"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_register_weight_et"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_weight_tv"
        android:layout_alignLeft="@+id/user_register_name_et"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_register_gender_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_weight_tv"
        android:layout_marginTop="20sp"
        android:layout_alignRight="@+id/user_register_name_tv"
        android:textSize="14sp"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/radio_group_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/user_register_weight_tv"
        android:layout_marginTop="20sp"
        android:layout_alignLeft="@+id/user_register_name_et"
        >

        <RadioButton
            android:id="@+id/user_male_radio_btn"
            android:layout_width="72sp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="12sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/user_female_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="12sp" />
    </RadioGroup>



    <TextView
        android:id="@+id/user_register_activity_level_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_gender_tag_tv"
        android:layout_alignRight="@+id/user_register_name_tv"
        android:layout_marginTop="20sp"
        android:text="Activity Level"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_register_activity_level_et"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_activity_level_tv"
        android:layout_alignLeft="@+id/radio_group_user_gender"
        android:ems="10"
        android:inputType="number"
        android:textSize="14sp" />

    <Button
        android:id="@+id/user_register_button"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Register Details" />

    <TextView
        android:id="@+id/cm_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_height_et"
        android:layout_toEndOf="@+id/user_register_height_et"
        android:text="Cm" />

    <TextView
        android:id="@+id/kg_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_weight_et"
        android:layout_alignEnd="@+id/cm_tag_tv"
        android:text="Kg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_register_activity_level_et"
        android:layout_toEndOf="@+id/user_register_weight_et"
        android:text="Enter a value from 1 - 5"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_register_activity_level_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="1 equates to little or no physical activity. 5 equates to 2 or more hours physical activity per day. Read about activity levels in the resources section. Pesonal details can be edited in the user account section."
        android:textSize="10sp" />


</RelativeLayout>
