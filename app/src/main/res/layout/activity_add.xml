<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/add_act_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="Add Activity"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/add_act_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="97dp"
        android:text="Activity name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/add_act_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_act_name_tv"
        android:layout_toEndOf="@+id/add_act_name_tv"
        android:ems="10"
        android:hint="name..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/add_act_calories_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_act_name_tv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp"
        android:text="Calories"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/add_act_calories_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_act_calories_tv"
        android:layout_toEndOf="@+id/add_act_name_tv"
        android:ems="10"
        android:hint="calories..."
        android:inputType="textPersonName|number" />
</RelativeLayout>